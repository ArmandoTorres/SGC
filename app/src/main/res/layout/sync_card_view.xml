<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/card_layout">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView android:layout_height="60dp"
            android:layout_width="300dp"
            android:text="Nombre Tabla"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_row="0"
            android:layout_column="0"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/txtNombreTablaCardView"/>
        <ImageButton android:layout_width="60dp"
                     android:layout_height="match_parent"
                     android:layout_column="1"
                     android:layout_row="0"
                     android:layout_gravity="center"
                     android:background="@drawable/actualizar"
                     android:contentDescription="Actualizar Registro"/>
        <ProgressBar android:layout_columnSpan="2"
                     android:layout_width="match_parent"
                     android:layout_row="1"
                     android:layout_height="60dp"/>
    </GridLayout>

</LinearLayout>